<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <%- include('../partials/head'); %>
</head>
<!-- <header>
    <%- include('../partials/header'); %>
</header> -->
<!-- <%- include('../partials/alert'); %> -->

<body class="h-100 position-relative">


    <main class="container p-2">
        <section class="transactions mt-5">
            <h1>Expense tracker</h1>
            <div class="transaction-data mt-4">
                <div class="row fw-bold fs-4 align-items-center">
                    <div class="col-1">
                        <p class="mb-0">S.No</p>
                    </div>
                    <div class="col-8">
                        <p class="mb-0">Spent on</p>
                    </div>
                    <div class="col-2">
                        <p class="mb-0">Amount($)</p>
                    </div>
                    <div class="col-1"></div>
                </div>
                <% var sum=0 %>
                    <% transactions.forEach(function(transaction,index) { %>
                        <div class="transaction">
                            <div class="row align-items-center fs-5 p-1">
                                <div class="col-1 ">
                                    <p class="mb-0">
                                        <%= index+1 %>
                                    </p>
                                </div>
                                <div class="col-8">
                                    <p class="mb-0">
                                        <%= transaction.text %>
                                    </p>
                                </div>
                                <div class="col-2">
                                    <p class="mb-0">
                                        <%= transaction.amount %>
                                            <% sum+=transaction.amount %>
                                    </p>
                                </div>
                                <div class="col-1"><a href="<%= " /delete/"+transaction.id %>" class="btn btn-sm
                                        btn-danger">Delete
                                    </a></div>
                            </div>
                        </div>
                        <% }); %>
                            <hr class="border border-success border-2 opacity-50">
                            <div class="row fw-bold fs-4">
                                <div class="col-9">Grand Total($)</div>
                                <div class="col">
                                    <%= sum %>
                                </div>
                            </div>
                            <hr class="border border-success border-2 opacity-50">


                            <% console.log(sum) %>
            </div>
        </section>
        <section class="add-expense">
            <p class="fw-bold fs-4 mt-4 ">Add Expense</p>
            <form action="/" method="post">
                <div class="row ">
                    <div class="col-8">
                        <input type="text" class="form-control" placeholder="Spent on" aria-label="Spent on"
                            name="text">
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" placeholder="how much" aria-label="amount"
                            name="amount">
                    </div>
                    <button type="submit" class="col-12 col-md-2 btn btn-primary btn-md btn-block ">Add
                        Entry</button>
                </div>
            </form>
        </section>

    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>